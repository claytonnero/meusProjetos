                id:largura
                input_filter:"float"
                size_hint_y:.5
            Widget:
                size_hint_y:1.5
            Button:
                text:"Calcular"
                on_release: result.text = "A área solicitada é!\n"+ str(float(altura.text) * float(largura.text))
