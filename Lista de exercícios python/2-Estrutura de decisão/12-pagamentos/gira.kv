    orientation:"vertical"
    padding:10
    Label:
        id:nome
        text:"Pagamentos"
        size_hint_y:.1
    GridLayout:
        cols:3
        Widget:
            size_hint_y:.1
        TextInput:
            id:preco
            multiline:False
            hint_text:"Pre√ßo hora"
            size_hint_y:None
            height:"40dp"
            input_filter:"float"
        Widget:
            size_hint_y:.1
    GridLayout:
        cols:3
        Widget:
            size_hint_y:.1
        TextInput:
            id:tempo
            hint_text:"Tempo trabalhado"
            multiline:False
            size_hint_y:None
            height:"40dp"
            input_filter:"float"
        Widget:
            size_hint_y:.1
    Widget:
        size_hint_y:.1
    Label:
        id:lab
        text:"Funcionou"
    Widget:
        size_hint_y:.1
    GridLayout:
        cols:3
        Widget:
        Button:
            text:"Calcular"
            on_release:root.solto(self)
        Widget:
            size_hint_y:.3